<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="#2a2a2a"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:listitem="@layout/tasks_item"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pizzeria_logo"
        android:layout_width="160dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/rcViewItems"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/_12_ktor_pizza_logo"
        android:background="@drawable/rounded_white_box"
        android:layout_marginTop="8dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewFoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/food_item"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginTop="16dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pizzeria_logo"
        app:layout_constraintLeft_toLeftOf="@id/pizzeria_logo"
        android:text="Delivery Fee 800"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="@id/pizzeria_logo"
        android:text="Min Order Fee 1400"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        app:layout_constraintLeft_toRightOf="@id/text1"
        android:fontFamily="@font/roboto_bold"
        android:textSize="12dp"
        android:text="AMD"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text2"
        app:layout_constraintLeft_toRightOf="@id/text2"
        android:fontFamily="@font/roboto_bold"
        android:textSize="12dp"
        android:text="AMD"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16dp"
        android:text="CLOSED"
        android:layout_marginStart="10dp"
        android:textColor="#ff0000"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text2"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16dp"
        android:text="11:00 - 23:00"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>